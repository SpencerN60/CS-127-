def inputValidInt():
    try:
        var1 = int(input("Input a Valid Integer: "))
        var2 = int(input("Input a Valid Integer: "))
        var3 = int(input("Input a Valid Integer: "))
        var4 = int(input("Input a Valid Integer: "))
        return var1, var2, var3, var4
    except Exception as e:
        print("ERROR",e)

def calcAAA(a,b,c,d):
    final = a + b + c + d
    return final
def calcAAS(a,b,c,d):
    final = a + b + c - d
    return final
def calcAAM(a,b,c,d):
    final = a + b + c * d
    return final
def calcASS(a,b,c,d):
    final = a + b - c - d
    return final
